// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id         String   @id @default(uuid())
  type       String
  breed      String
  name       String
  age        String
  size       String
  color      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  ORGs ORG[]

  @@map("pets")
}

model ORG {
  id            String @id @default(uuid())
  name          String
  description   String
  address       String
  whatsapp      String
  email         String @unique
  password_hash String

  pet    Pet?    @relation(fields: [pet_id], references: [id])
  pet_id String?

  city    City   @relation(fields: [city_id], references: [id])
  city_id String

  @@map("orgs")
}

model City {
  id          String @id @default(uuid())
  name        String
  description String

  ORGs ORG[]

  @@map("cities")
}
